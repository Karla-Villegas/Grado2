<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/imageMinisterio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                   android:src="@drawable/logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ministerioDe"
                    android:text="Ministerio de"
                    android:textSize="15dp"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textColor="@color/background_text"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imageMinisterio" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ministerio_name"
                    android:textSize="15dp"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textColor="@color/background_text"
                    tools:text="Jornada Social"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/ministerioDe"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imageMinisterio" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textMiembros"
                    android:text="Total de Miembros"
                    android:textSize="15dp"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textColor="@color/background_text"
                    app:layout_constraintEnd_toStartOf="@+id/total_miembros"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="24dp" />

            <TextView
                    android:id="@+id/total_miembros"
                    android:text="40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textColor="@color/background_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="24dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>