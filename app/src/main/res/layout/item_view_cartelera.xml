<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:background="@color/android_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout3">

        <ImageView
                android:id="@+id/icon_header"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_account"
                android:layout_margin="@dimen/_8sdp"/>

        <TextView
                android:id="@+id/header_tipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/background_text"
                android:gravity="center_vertical"
                android:text="Tipo de publicación"
                android:layout_margin="@dimen/_8sdp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:background="@color/colorGrisCard">

        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de prueba"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/background_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.codesgood.views.JustifiedTextView
                android:id="@+id/contentBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/background_text"
                android:textSize="@dimen/_12sdp"
                android:maxLines="3"
                android:text="@string/text_lorem"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/fechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Incio:"
                android:textStyle="bold"
                android:textColor="@color/background_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/contentBody"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

        <TextView
                android:id="@+id/fechaI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000"
                android:textColor="@color/background_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/contentBody"
                app:layout_constraintStart_toEndOf="@id/fechaInicio"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" />

        <TextView
                android:id="@+id/fechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Culminación:"
                android:textStyle="bold"
                android:textColor="@color/background_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/fechaInicio"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

        <TextView
                android:id="@+id/fechaC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000"
                android:textColor="@color/background_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/fechaI"
                app:layout_constraintStart_toEndOf="@id/fechaFin"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" />

        <TextView
                android:id="@+id/Hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora:"
                android:textStyle="bold"
                android:textColor="@color/background_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/fechaFin"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

        <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/background_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/fechaC"
                app:layout_constraintStart_toEndOf="@id/Hora"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" />

        <TextView
                android:id="@+id/Lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección:"
                android:textStyle="bold"
                android:textColor="@color/background_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/Hora"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

        <TextView
                android:id="@+id/lugar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Avenida José Felix Rivas, calle principal casa #5"
                android:textColor="@color/background_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/hora"
                app:layout_constraintStart_toEndOf="@id/Lugar"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>