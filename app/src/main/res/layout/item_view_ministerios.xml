<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        app:cardBackgroundColor="@color/colorGrisCard"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/imgOrganizacion"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_account_group"
                app:tint="@color/colorAccent"
                android:layout_gravity="top|center"
                android:layout_marginBottom="@dimen/_20sdp"/>

        <TextView
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:id="@+id/nombreOrganizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="Ministerio"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/quicksand_semibold"
                android:textColor="@color/background_text"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/imgOrganizacion"
                app:layout_constraintEnd_toEndOf="@+id/imgOrganizacion"
                app:layout_constraintStart_toStartOf="@+id/imgOrganizacion"/>

    </FrameLayout>
</androidx.cardview.widget.CardView>